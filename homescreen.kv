
<HomeScreen>:
	download: download.__self__
	search: search.__self__
	url: url.__self__
	thumbnail: thumbnail.__self__
	FloatLayout:
		MDTextFieldRound:
			pos_hint: {"top":.9}
			size_hint: .75, None	
			icon_left: "plus"
			hint_text: 'Enter Video URL'
			foreground_color: 0, 0, 0, 1
			id: url
		MDRaisedButton:
			size_hint: None, .08 #root.ids.url.size_hint
			pos_hint: {"top":.9, "center_x":.88}
			# icon: "magnify"
			text: "Search"
			on_release: app.getURL()
			id: search
		AsyncImage:
			pos_hint: {"center_y": .5}
			size_hint: 1, .5
			source: "https://i.imgur.com/jnSLqxD.png"
			on_error: thumbnail.source = "https://i.imgur.com/jnSLqxD.png"
			id: thumbnail
			size: 480, 360
		GridLayout:
			pos_hint: {"top":1}
			size_hint: 1, .5
		BoxLayout:
			Widget:
			MDRaisedButton:
				# disabled: True
				id: download
				text: "Download"
				pos_hint: {"center_y": .2}
				on_release: app.dropdown.open(self)
			Widget: